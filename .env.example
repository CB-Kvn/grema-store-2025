# Archivo de ejemplo para variables de ambiente
# Copia este archivo y renómbralo según el ambiente:
# .env.development, .env.staging, .env.production

# Ambiente actual (development | staging | production)
VITE_APP_ENV=development

# URLs principales
VITE_API_URL=http://localhost:3001/api
VITE_BASE_URL=http://localhost:5173

# Autenticación
VITE_GOOGLE_CLIENT_ID=your-google-client-id

# Configuraciones de desarrollo
VITE_DEBUG_MODE=true
VITE_ENABLE_LOGS=true
VITE_ENABLE_REDUX_DEVTOOLS=true

# Servicios externos
VITE_PAYMENT_GATEWAY_URL=https://sandbox-payment.example.com
VITE_ANALYTICS_ENABLED=false
VITE_SENTRY_ENABLED=false
VITE_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Configuración de medios
VITE_IMAGE_OPTIMIZATION=false
VITE_CDN_URL=http://localhost:3000

# Configuración de cache
VITE_CACHE_TTL=300

# Analytics y tracking (solo producción)
VITE_GOOGLE_ANALYTICS_ID=GA_TRACKING_ID
VITE_FACEBOOK_PIXEL_ID=FB_PIXEL_ID

# Configuración del servidor de desarrollo
VITE_DEV_PORT=5173
VITE_DEV_HOST=localhost
VITE_PREVIEW_PORT=4173
VITE_PREVIEW_HOST=localhost
